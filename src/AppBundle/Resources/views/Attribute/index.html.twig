{% extends 'AppBundle::layout.html.twig' %}

{% block body %}
    <h1>
        {{ 'label.attribute.index'|trans }}
    </h1>

    <h2>{{ 'label.attribute.select-schema'|trans }}</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>{{ 'label.attribute.schema.name' }}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for s in schemas %}
                <tr>
                    <td>{{ s.name }}</td>
                    <td>
                        <a href="{{ path('attribute_for_schema',
                                            {'schema_name': s.name}) }}" class="btn">
                            <span class="glyphicon glyphicon-pencil"></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
