{% extends 'AppBundle::layout.html.twig' %}
{% import '@lanigerBootstrap/bootstrap.macro.twig' as bootstrap %}

{% block body %}
    <h1>
        {{ 'label.attribute.index'|trans }}
    </h1>

    <h2>{{ 'label.attribute.select-schema'|trans }}</h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>{{ 'label.attribute.schema.name'|trans }}</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for s in schemas %}
                    <tr>
                        <td>{{ s.name }}</td>
                        <td>
                            <a href="{{ path('attribute_for_schema',
                                            {'uid': s.uid}) }}" class="btn btn-primary">
                                {{ bootstrap.glyphicon('arrow-right') }}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
