{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    <h1>Tags list</h1>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.name }}</td>
                <td>
                    <a class="button" href="{{ path('tag_show', { 'id': tag.id }) }}">show</a>
                    <a class="button" href="{{ path('tag_edit', { 'id': tag.id }) }}">edit</a>
                    <a class="button" href="{{ path('instance_tagged_with', {'id':tag.id}) }}">
                        Instances
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tag_new') }}">Create a new tag</a>
{% endblock %}
