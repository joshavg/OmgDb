{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    <h1>Tagged With</h1>

    {% for tag in tags %}
        <a class="button" href="{{ path('instance_tagged_with', {'id': tag.id}) }}">
            {{ tag.name }}
        </a>
    {% endfor %}

    <h1>Latest Instances</h1>

    <table>
        <thead>
        <tr>
            <th>Schema</th>
            <th>Name</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for instance in instances %}
            <tr>
                <td>{{ instance.schema.name }}</td>
                <td>{{ instance.name }}</td>
                <td>{{ instance.createdAt|date }}</td>
                <td>
                    <a class="button" href="{{ path('instance_show', {'id': instance.id}) }}">
                        Show
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
