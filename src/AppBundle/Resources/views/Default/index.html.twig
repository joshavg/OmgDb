{% extends 'AppBundle::layout.html.twig' %}

{% block body %}
    <h1>
        {{ 'label.hello'|trans }}
        {{ app.user.name }}
    </h1>

    {% if starred %}
        <h2>{{ 'label.instances.starred'|trans }}</h2>
        {% for instance in starred %}
            <h3>
                <a href="{{ path('instance_show', {'uid': instance.uid}) }}">
                    {{ instance.name }}
                </a>
                <small>
                    {{ 'label.instance.updated_at'|trans }}
                    {{ instance.updatedAt|date }}
                </small>
            </h3>
            {% include 'AppBundle:Instance:display.html.twig' with {'instance': instance} %}
        {% endfor %}
    {% endif %}
{% endblock %}
