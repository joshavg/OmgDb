{
    "name": "josha/28",
    "license": "GPL-3.0",
    "type": "project",
    "description": "document database based heavily on relations",
    "version": "v0.2.0-dev",
    "autoload": {
        "psr-4": {
            "AppBundle\\": "src/AppBundle",
            "laniger\\": "src/laniger"
        },
        "files": [
            "app/AppKernel.php"
        ]
    },
    "require": {
        "php": ">=5.6",
        "symfony/symfony": "~3",
        "doctrine/orm": "^2.4.8",
        "doctrine/doctrine-bundle": "~1.4",
        "symfony/swiftmailer-bundle": "~2.3",
        "symfony/monolog-bundle": "~2.4",
        "sensio/distribution-bundle": "~5.0",
        "sensio/framework-extra-bundle": "^3.0.2",

        "incenteev/composer-parameter-handler": "~2.0",
        "symfony/assetic-bundle" : "~2.8",
        "graphaware/neo4j-php-client": "^4",
        "egeloen/ordered-form-bundle": "^2.0",
        "michelf/php-markdown": "^1.6"
    },
    "require-dev": {
        "sensio/generator-bundle": "~3.0",
        "symfony/phpunit-bridge": "~2.7",
        "pdepend/pdepend": "^2.2",
        "sebastian/phpcpd": "*",
        "phpmd/phpmd": "@stable",
        "loostro/deptrac-shim": "dev-master",
        "joshavg/sonar-runner": "2.7"
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ],
        "pdepend": [
            "./bin/pdepend --overview-pyramid=docs/overview-pyramid.svg src"
        ],
        "phpmd": [
            "./bin/phpmd src/AppBundle text cleancode,codesize,controversial,design,naming,unusedcode"
        ],
        "test": [
            "./bin/deptrac analyze --formatter-graphviz-display=0",
            "./bin/phpcpd src"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "symfony-assets-install": "relative",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        }
    }
}
